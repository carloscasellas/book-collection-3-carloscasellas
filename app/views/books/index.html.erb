<%= link_to "Back to Homepage", user_books_path %>

<div class="Books Homepage">
    <h2>Book Collection Homepage</h2>

    <%= link_to('Add new book', new_book_path, class: 'action new') %>

    <% flash.each do |type, msg| %>
        <h3>
            <%= msg %>
        </h3>
    <% end %>

    <table class="booksTable" summary="Task list" style="width: 100%;">
        <tr class="header">
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published Date</th>
        </tr>
        <% @books.each do |book| %>
            <tr>
                <td><%= book.id %></td>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td><%= book.price %></td>
                <td><%= book.publishedDate %></td>
                <td class="actions">
                    <%= link_to("Show", book_path(book), class: 'action show') %>
                    <%= link_to("Edit", edit_book_path(book), class: 'action edit') %>
                    <%= link_to("Delete", delete_book_path(book), class: 'action delete') %>
                </td>
            </tr>
        <% end %>
    </table>
</div>